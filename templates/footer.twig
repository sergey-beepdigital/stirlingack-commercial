<div class="container">
    <div class="footer-widgets">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="footer-widgets--widget">
                    {{ footer_widgets1 }}
                </div>
            </div>
            <div class="col-lg-5 col-md-7 mt-5 mt-md-0">
                <div class="footer-widgets--widget menu-2columns">
                    {{ footer_widgets2 }}
                </div>
            </div>
            <div class="col-lg-4 mt-5 mt-lg-0">
                <div class="footer-widgets--widget menu-2columns">
                    {{ footer_widgets3 }}
                </div>
            </div>
        </div>

        <nav class="footer-supported-brands">
            <ul>
                <li><img src="{{ theme.link }}/dist/images/footer-logo1.svg"></li>
                <li><img src="{{ theme.link }}/dist/images/footer-logo2.svg"></li>
                <li><img src="{{ theme.link }}/dist/images/footer-logo3.svg"></li>
            </ul>
        </nav>
    </div>

    <div class="footer-copyright">
        {{ options.footer_address | wpautop }}
        <div class="footer-copyright--nav">
            <div>&copy; {{"now"|date('Y')}} Stirling Ackroyd</div>
            <nav>

                {% include "menu.twig" with {'menu': footer_menu.get_items} %}

            </nav>
            <div class="developed-by">
                Site by <a href="https://thisiscrowd.com" target="_blank">Crowd</a>
            </div>
        </div>
    </div>
</div>
