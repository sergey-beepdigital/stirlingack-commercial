<section class="section-property-detail-content-tabs">
    <div class="container">
        <div class="tab-content">
            <div id="property-info-description" class="tab-pane fade show active">
                <div class="property-detail-description-wrapper">
                    <div class="row">
                        <div class="col-xl-4 offset-xl-1 order-xl-2">
                            {% if department == 'residential-lettings' %}
                                <div class="property-rent-details">
                                    <h3 class="text-uppercase">Letting Details</h3>
                                    <ul>
                                        {% if available_date %}
                                            <li><strong>Let available date:</strong> {{ available_date }}</li>
                                        {% endif %}
                                        {% if property_type %}
                                            <li><strong>Let type:</strong> {{ property_type }}</li>
                                        {% endif %}
                                        {% if furnished %}
                                            <li><strong>Furnish type:</strong> {{ furnished }}</li>
                                        {% endif %}
                                    </ul>
                                </div>
                            {% endif %}

                            {{ fn('propertyhive_template_single_features') }}
                        </div>
                        <div class="col-xl-7 order-xl-1">
                            {{ fn('propertyhive_template_single_description') }}
                        </div>
                    </div>
                </div>
            </div>
            <div id="property-info-location" class="tab-pane fade">
                {{ '[property_map]' | shortcodes }}
            </div>

            {% if floorplan_urls %}

                <div id="property-info-floorplan" class="tab-pane fade">
                    <div class="property-floorplan-epc-wrap">
                        <div class="row">

                            {% for image_data in floorplan_urls %}

                                <div class="col"><a href="{{ image_data.url }}" data-fancybox="floorplans"><img src="{{ image_data.url }}"></a></div>

                            {% endfor %}

                        </div>
                    </div>
                </div>

            {% endif %}

            {% if epc_urls %}

                <div id="property-info-epc" class="tab-pane fade">
                    <div class="property-floorplan-epc-wrap">
                        <div class="row">

                            {% for image_data in epc_urls %}

                                <div class="col"><a href="{{ image_data.url }}" data-fancybox="epc"><img src="{{ image_data.url }}"></a></div>

                            {% endfor %}
                        </div>
                    </div>
                </div>

            {% endif %}

            <div id="property-info-schools" class="tab-pane fade">
                {{ fn('do_shortcode','[locrating_all_in_one_map]') }}
                {{ fn('do_shortcode','[locrating_schools_map]') }}
            </div>
        </div>
    </div>
</section>
