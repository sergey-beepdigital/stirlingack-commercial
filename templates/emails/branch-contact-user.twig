{% set blueColor = '#151e46' %}

<table style="background-color: #f5f5f5;width: 100%;" cellpadding="20" cellspacing="0">
    <tr>
        <td>
            <table width="600" align="center" style="background-color: #FFF;" cellpadding="20">
                <tr>
                    <td style="text-align: center;">
                        <img src="{{ body.logo_url }}" width="100" style="max-width: 100px;">
                    </td>
                </tr>
                <tr>
                    <td>
                        Hello {{ body.form_data.first_name }} {{ body.form_data.surname }},

                        Thank you for your Stirling Ackroyd enquiry. We will be in touch with you shortly.{% if body.property.id %} In the meantime, details of the property you enquired about are shown below.{% endif %}
                    </td>
                </tr>
                {% if body.property.id %}
                    <tr>
                        <td>
                            <div style="padding: 20px;border: 1px solid silver;">
                                <table width="100%" cellpadding="5">
                                    <tr>
                                        <td align="center">
                                            <a href="{{ fn('get_the_permalink',body.property.id) }}"><img src="{{ body.property_image }}" style="max-width:300px;" width="300"></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h3 style="margin: 0;"><a style="color: {{ blueColor }};text-decoration: none;" href="{{ fn('get_the_permalink',body.property.id) }}">{{ body.property.post_title }}</a></h3>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <table>
                                                <tr style="color: gray;">
                                                    <td>Asking price {{ body.property_price }}</td>
                                                    <td style="padding-left:5px;padding-right:5px;">|</td>
                                                    <td>Desks {{ body.property.availability_size_desks_from ~ '-' ~ body.property.availability_size_desks_to}}</td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color: gray;">
                                            {{ body.property_desc | striptags | slice(0, 200) ~ '...'  }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="{{ fn('get_the_permalink',body.property.id) }}" style="display: block;padding: 12px 18px;background-color: {{ blueColor }};text-align: center;color: #FFFFFF;text-decoration: none;">View Property</a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>
                {% endif %}

            </table>
        </td>
    </tr>
</table>
