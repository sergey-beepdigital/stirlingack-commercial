{% set gallery_images = post.get_field('ng_gallery') %}

<div class="new-home-post-item">
    <div class="new-home-post-item--image-wrap">
        <a href="{{ post.link }}">
            <span class="new-home-amount-images"><i class="fa-light fa-camera"></i> {{ gallery_images | length }}</span>
            <span class="new-home-flag">New Home</span>

            {% if gallery_images %}
                <img src="{{ gallery_images[0].url | resize(740,740) }}">
            {% else %}
                <img src="{{ theme.link ~ '/dist/images/placeholder/placeholder740x740.jpg' }}">
            {% endif %}
        </a>
    </div>
    <div class="new-home-post-item--content">
        <h4 class="new-home-title"><a href="{{ post.link }}">{{ post.title }}</a></h4>
        {% if post.nh_price %}
            <div class="new-home-price">
                {% if post.nh_price is numeric %}
                    Prices From <span class="price">Â£{{ fn('ph_display_price_field',post.nh_price) }}</span>
                {% else %}
                    <span class="price">{{ post.nh_price }}</span>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>
