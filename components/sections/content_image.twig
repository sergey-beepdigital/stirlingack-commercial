<section class="page-section page-section--padding50 section-content-image {{ section.ci_logo_watermark ? 'has-logo-watermark' : '' }}">
    <div class="container">
        <div class="row no-gutters text-center text-lg-left">
            <div class="col-lg-8" data-aos="fade-down">
                <div class="bg-primary section-content-image--content">
                    {% if section.ci_title %}
                        <h2 class="h1">{{ section.ci_title }}</h2>
                    {% endif %}
                    <div class="section-content-image--content_inner content-clear">{{ section.ci_content }}</div>
                    {% if section.ci_link %}
                        {% include 'components/parts/link.twig' with {
                            link: section.ci_link,
                            css_class: 'link-border link-border--red'
                        } %}
                    {% endif %}
                    {% if section.ci_right_column_type != 'shortcode' %}
                        <div class="section-content-image--mobile-image d-block d-lg-none">
                            <img src="{{ section.ci_image }}" loading="lazy">
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-lg-4 {% if section.ci_right_column_type != 'shortcode' %}d-none d-lg-block{% endif %}" data-aos="fade-up">

                {% if section.ci_right_column_type != 'shortcode' %}

                    <div class="section-content-image--image-wrap">
                        <img src="{{ section.ci_image }}" loading="lazy">
                    </div>

                {% else %}

                    <div class="section-content-image--shortcode-wrap">

                        {{ section.ci_shortcode | shortcodes }}

                    </div>

                {% endif %}

            </div>
        </div>
    </div>
</section>
