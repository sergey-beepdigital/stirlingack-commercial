<section class="page-section page-section--padding50 section-content {{ section.text_2_columns ? 'section-content--2-columns' : '' }}" {{ section.cont_css_class }}>
    <div class="container">
        <div class="row">
            <div class="{{ section.const_fullwidth_container ? 'col-xl-12' : 'col-lg-10 offset-lg-1' }}">

                {% if section.sidebar and section.cont_has_image != 1 %}

                    <div class="row">
                        <div class="col-md-7" data-aos="fade-down">
                            <div class="content-clear">
                                {{ section.cont_editor_1 }}
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-1 col-md-5 mt-5 mt-md-0" data-aos="fade-up">
                            <div class="section-content--sidebar">
                                {{ section.sidebar }}
                            </div>
                        </div>
                    </div>

                {% elseif section.cont_has_image and section.cont_image %}

                    <div class="row">
                        <div class="col-xl-5" data-aos="fade-down">
                            <div class="content-clear">
                                {{ section.cont_editor_1 }}
                            </div>
                        </div>
                        <div class="col-xl-6 offset-xl-1" data-aos="fade-up">
                            <img src="{{ section.cont_image }}">
                        </div>
                    </div>

                {% else %}

                    <div class="content-clear" data-aos="fade-up">
                        {{ section.cont_editor_1 }}
                    </div>

                {% endif %}

            </div>
        </div>
    </div>
</section>
